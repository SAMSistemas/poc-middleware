<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns:jee="http://www.springframework.org/schema/jee"
              xmlns="http://camel.apache.org/schema/spring"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
              http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
              http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">

    <jee:jndi-lookup id="mysqlDS" jndi-name="java:jboss/jdbc/mysql" expected-type="javax.sql.DataSource" />

    <spring:bean id="procesadorRouteBuilder" class="ar.com.samsistemas.middleware.procesadortramite.routebuilder.ProcesadorTramiteRouteBuilder" />

    <camelContext id="procesadorTramites" streamCache="true" useBreadcrumb="false" allowUseOriginalMessage="false"
                  xmlns="http://camel.apache.org/schema/spring">

        <!-- Import Java DSL Routes -->
        <routeBuilder ref="procesadorRouteBuilder"/>

    </camelContext>

</spring:beans>
